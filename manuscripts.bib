	urldate = {2024-02-29},
	journal = {Journal of the American Heart Association},
	author = {Dib, Marie‐Joe and Levin, Michael G. and Zhao, Lei and Diab, Ahmed and Wang, Zhaoqing and Ebert, Christina and Salman, Oday and Azzo, Joe David and Gan, Sushrima and Zamani, Payman and Cohen, Jordana B. and Gill, Dipender and Burgess, Stephen and Zagkos, Loukas and van Empel, Vanessa and Richards, A. Mark and Doughty, Rob and Rietzschel, Ernst R. and Kammerhoff, Karl and Kvikstad, Erika and Maranville, Joseph and Schafer, Peter and Seiffert, Dietmar A. and Ramirez‐Valle, Francisco and Gordon, David A. and Chang, Ching‐Pin and Javaheri, Ali and Mann, Douglas L. and Cappola, Thomas P. and Chirinos, Julio A.},
