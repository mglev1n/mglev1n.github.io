	journal = {European Journal of Preventive Cardiology},
	author = {Clarke, Shoa L and Huang, Rose D L and Hilliard, Austin T and Levin, Michael G and Sharma, Disha and Thomson, Blake and Lynch, Julie and Tsao, Philip S and Gaziano, J Michael and Assimes, Themistocles L and {the VA Million Veteran Program}},
