	author = {Stankov, Sylvia and Center, Regeneron Genomics and Vitali, Cecilia and Park, Joseph and Nguyen, David and Mayne, Leland and Englander, S. Walter and Levin, Michael G. and Vujkovic, Marijana and Hand, Nicholas J. and Phillips, Michael C. and Rader, Daniel J.},
